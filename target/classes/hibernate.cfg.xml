<?xml version="1.0" encoding="UTF-8"?>
<hibernate-configuration>
	
	<session-factory>
	
    <property name="connection.driver_class">org.mm.mysql.Driver</property>
    <property name="connection.url">jdbc:mysql://localhost:3306</property>
    <property name="connection_userid">root</property>
    <property name="connection_pwd">masterkey</property>
	
	<!-- Dialecto MySQL -->
	<!-- <property name="dialect">org.hibernate.dialect.MySQLDialect</property> -->
	 <property name="dialect">org.hibernate.MySQLDialect</property>
	
	<!-- Mostrar en consola operaciones SQL -->
	<property name="show_sql">true</property>
	
	<!-- Use  mapping basado en XML -->
	<mapping resource="com/jc/domain/Tramite.hbm.xml" />  
	
	</session-factory>


</hibernate-configuration>